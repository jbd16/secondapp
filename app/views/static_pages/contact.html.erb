<a href="http://localhost:3000/index"></a>

<%= link_to "About", static_pages_about_path %>
<!-- generates the HTML tag: -->
<a href="http://localhost:3000/about"></a>

<%= link_to "Contact", @contact%>

<h1>Contact Us!</h1>
<p>Berlin Bikes is in Berlin!</p>

<%= flash[:notice] %>
<%= form_tag ("/static_pages/thank_you") do %>

<div class = "row">
	<div class="col-md-4">
		<div class="form-group">
			<%= label_tag :name, "Name" %>
			<%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
		</div>
		<div class = "form-group">
		  <%= label_tag :email, "Email Address" %>
		  <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
		</div>
		<div class="form-group">
			<%= label_tag :message, "Message" %>
			<%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
		</div>
	</div>
</div>
<%= submit_tag "Send" %>
<% end %>

